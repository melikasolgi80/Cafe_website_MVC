@model IndexModel

@{
    ViewData["Title"] = "صفحه اصلی";
}


    <section class="section_header p-4">
        <div class="container text-center p-4 text-light " id="home">
            <div class="row">
                <div class="col-md-7 col-sm-12 ">

                    <h6>به کافه رزتا خوش آمدید </h6>
                    <h1> از طعمی که متفاوت است لذت ببرید </h1>

                    <button class="btn btn-dark mb-4 px-5 py-2 ">جهت رزرو </button>
                </div>

                <div class="col-md-5 col-sm-12 ">
                    <img src="./assets/caffee/2.png" alt="">

                </div>

            </div>
        </div>
    </section>

    <section class="section_1 p-5">
        <div class="container text-center">
            <div class="row">
                <div class=" col-md-6 col-sm-12 col-lg-6">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="./assets/caffee/27.jpg" alt="First slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="./assets/caffee/19.jpg" alt="Second slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="./assets/caffee/5464.jpg" alt="Third slide">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
                <div class=" col-md-6 col-sm-12" id="aboutus">
                    <div class="panel ">
                        <h1>درباه ما</h1>
                        <p class="pt-4">
                            کافه رزتا در سال 1396 تاسیس شده و تا این لحظه مشغول خدمت به مشتریان عزیز خود بوده است .
                        </p>
                        <p> این کافه با اشتیاق اعلام می کند ارائه خدمات انلاین به مشتریان خود را نیز شروع کرده و زین پس مشتریان می توانند محصولات قهوه ارگانیک را  به صورت سفارشی و درب منزل دریافت کنند</p>
                    </div>
                </div>
            </div>
        </div>
    </section>




    <div class="container" id="menue">
        <div class="row  col-12 col-sm-12 col-md-12 col-lg-12 text-center justify-content-center ">
            <div class="swiper swiperbtn container">
                <div class="swiper-wrapper content">

                    <a href="#" class="btn swiper-slide rounded-pill text-light mr-1  btn-lg btn-primary  bg-dark  active" role="button" aria-pressed="true"> پیشنهاد ما</a>
                    <a href="#" class="btn swiper-slide rounded-pill text-light mr-1  btn-lg  btn-secondary bg-dark " role="button" aria-pressed="false">نوشیدنی سرد</a>
                    <a href="#" class="btn swiper-slide rounded-pill text-light mr-1  btn-lg  bg-dark" role="button" aria-pressed="false">نوشیدنی گرم</a>
                    <a href="#" class="btn swiper-slide rounded-pill text-light  mr-1 btn-lg  bg-dark" role="button" aria-pressed="false">کیک </a>
                    <a href="#" class="btn swiper-slide  rounded-pill text-light mr-1 btn-lg  bg-dark" role="button" aria-pressed="false">بستنی</a>
                    <a href="#" class="btn swiper-slide  rounded-pill text-light mr-1 btn-lg  bg-dark" role="button" aria-pressed="false">میلک شیک  </a>

                </div>
            </div>
        </div>
    </div>


    <div class="h1  text-center mt-5 pt-4" id="offer"> پیشنهاد ما</div>
